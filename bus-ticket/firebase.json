{
  "hosting": {
    "public": "dist/bus-ticket/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "europe-west1"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
